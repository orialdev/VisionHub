-- Seraph UI Library

local Seraph = {
    Themes = {
        Dark = {
            Background = Color3.fromRGB(20, 20, 25),
            Sidebar = Color3.fromRGB(25, 25, 30),
            Accent = Color3.fromRGB(114, 137, 218),
            Element = Color3.fromRGB(30, 30, 35),
            Text = Color3.fromRGB(240, 240, 240),
            Placeholder = Color3.fromRGB(150, 150, 150),
        }
    }
}

-- Optimization References
local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")
local CoreGui = game:GetService("CoreGui")
local HttpService = game:GetService("HttpService")

-- Internal Utility Functions
local function Create(ClassName, Properties, Children)
    local Obj = Instance.new(ClassName)
    for i, v in pairs(Properties) do Obj[i] = v end
    if Children then
        for _, Child in pairs(Children) do Child.Parent = Obj end
    end
    return Obj
end

local function MakeDraggable(Frame, DragHeader)
    local dragging, dragInput, dragStart, startPos
    DragHeader.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
            dragStart = input.Position
            startPos = Frame.Position
        end
    end)
    UserInputService.InputChanged:Connect(function(input)
        if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
            local delta = input.Position - dragStart
            Frame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        end
    end)
    UserInputService.InputEnded:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = false
        end
    end)
end

function Seraph:CreateWindow(Config)
    Config = Config or {}
    local Title = Config.Title or "Seraph UI"
    local SubTitle = Config.SubTitle or "Version 1.0"
    
    local GUI = Create("ScreenGui", {
        Name = "Seraph_" .. HttpService:GenerateGUID(false),
        Parent = (gethui and gethui()) or CoreGui,
        ResetOnSpawn = false
    })

    local Main = Create("Frame", {
        Name = "MainFrame",
        Size = UDim2.new(0, 550, 0, 380),
        Position = UDim2.new(0.5, -275, 0.5, -190),
        BackgroundColor3 = Seraph.Themes.Dark.Background,
        ClipsDescendants = true,
        Parent = GUI
    }, {
        Create("UICorner", { CornerRadius = UDim.new(0, 8) }),
        Create("UIStroke", { Color = Color3.fromRGB(45, 45, 50), Thickness = 1.2 })
    })

    local Sidebar = Create("Frame", {
        Name = "Sidebar",
        Size = UDim2.new(0, 160, 1, 0),
        BackgroundColor3 = Seraph.Themes.Dark.Sidebar,
        Parent = Main
    }, {
        Create("UICorner", { CornerRadius = UDim.new(0, 8) }),
        Create("Frame", { -- Splitter
            Size = UDim2.new(0, 1, 1, 0),
            Position = UDim2.new(1, 0, 0, 0),
            BackgroundColor3 = Color3.fromRGB(45, 45, 50),
            BorderSizePixel = 0
        })
    })

    local ContentHolder = Create("Frame", {
        Name = "Content",
        Size = UDim2.new(1, -165, 1, -50),
        Position = UDim2.new(0, 165, 0, 45),
        BackgroundTransparency = 1,
        Parent = Main
    })

    local Topbar = Create("Frame", {
        Name = "Topbar",
        Size = UDim2.new(1, 0, 0, 45),
        BackgroundTransparency = 1,
        Parent = Main
    }, {
        Create("TextLabel", {
            Text = Title,
            Size = UDim2.new(0, 200, 1, 0),
            Position = UDim2.new(0, 15, 0, 0),
            TextColor3 = Seraph.Themes.Dark.Text,
            TextSize = 18,
            Font = Enum.Font.GothamBold,
            TextXAlignment = "Left",
            BackgroundTransparency = 1
        })
    })

    MakeDraggable(Main, Topbar)

    local TabContainer = Create("ScrollingFrame", {
        Size = UDim2.new(1, -10, 1, -100),
        Position = UDim2.new(0, 5, 0, 60),
        BackgroundTransparency = 1,
        ScrollBarThickness = 0,
        Parent = Sidebar
    }, {
        Create("UIListLayout", { Padding = UDim.new(0, 5) })
    })

    local Window = { Tabs = {}, Elements = {}, ActiveTab = nil }

    function Window:AddTab(TabTitle)
        local Tab = { Elements = {}, Instance = nil }
        
        local TabBtn = Create("TextButton", {
            Text = TabTitle,
            Size = UDim2.new(1, 0, 0, 32),
            BackgroundColor3 = Color3.fromRGB(40, 40, 45),
            BackgroundTransparency = 1,
            TextColor3 = Color3.fromRGB(200, 200, 200),
            Font = Enum.Font.GothamMedium,
            TextSize = 14,
            AutoButtonColor = false,
            Parent = TabContainer
        }, {
            Create("UICorner", { CornerRadius = UDim.new(0, 6) })
        })

        local TabPage = Create("ScrollingFrame", {
            Size = UDim2.new(1, 0, 1, 0),
            BackgroundTransparency = 1,
            Visible = false,
            ScrollBarThickness = 2,
            ScrollBarImageColor3 = Seraph.Themes.Dark.Accent,
            Parent = ContentHolder
        }, {
            Create("UIListLayout", { Padding = UDim.new(0, 8), HorizontalAlignment = "Center" }),
            Create("UIPadding", { PaddingTop = UDim.new(0, 5) })
        })

        TabBtn.MouseButton1Click:Connect(function()
            for _, t in pairs(Window.Tabs) do
                t.Page.Visible = false
                TweenService:Create(t.Btn, TweenInfo.new(0.3), {BackgroundTransparency = 1}):Play()
            end
            TabPage.Visible = true
            TweenService:Create(TabBtn, TweenInfo.new(0.3), {BackgroundTransparency = 0.5}):Play()
        end)

        Tab.Page = TabPage
        Tab.Btn = TabBtn
        table.insert(Window.Tabs, Tab)
        
        if #Window.Tabs == 1 then
            TabPage.Visible = true
            TabBtn.BackgroundTransparency = 0.5
        end

        function Tab:AddButton(BtnText, Callback)
            local Button = Create("TextButton", {
                Text = BtnText,
                Size = UDim2.new(0, 360, 0, 35),
                BackgroundColor3 = Seraph.Themes.Dark.Element,
                TextColor3 = Seraph.Themes.Dark.Text,
                Font = Enum.Font.Gotham,
                TextSize = 14,
                AutoButtonColor = false,
                Parent = TabPage
            }, {
                Create("UICorner", { CornerRadius = UDim.new(0, 6) }),
                Create("UIStroke", { Color = Color3.fromRGB(60, 60, 65), Thickness = 1 })
            })

            Button.MouseButton1Click:Connect(function()
                local t = TweenService:Create(Button, TweenInfo.new(0.1), {BackgroundColor3 = Color3.fromRGB(40, 40, 45)})
                t:Play() t.Completed:Wait()
                TweenService:Create(Button, TweenInfo.new(0.1), {BackgroundColor3 = Seraph.Themes.Dark.Element}):Play()
                pcall(Callback)
            end)
        end

        function Tab:AddToggle(TglTitle, Default, Callback)
            local Toggled = Default or false
            local ToggleFrame = Create("TextButton", {
                Text = "",
                Size = UDim2.new(0, 360, 0, 40),
                BackgroundColor3 = Seraph.Themes.Dark.Element,
                AutoButtonColor = false,
                Parent = TabPage
            }, {
                Create("UICorner", { CornerRadius = UDim.new(0, 6) }),
                Create("TextLabel", {
                    Text = TglTitle,
                    Size = UDim2.new(1, -60, 1, 0),
                    Position = UDim2.new(0, 10, 0, 0),
                    TextColor3 = Seraph.Themes.Dark.Text,
                    BackgroundTransparency = 1,
                    Font = Enum.Font.Gotham,
                    TextSize = 14,
                    TextXAlignment = "Left"
                })
            })

            local Status = Create("Frame", {
                Size = UDim2.new(0, 35, 0, 20),
                Position = UDim2.new(1, -45, 0.5, -10),
                BackgroundColor3 = Toggled and Seraph.Themes.Dark.Accent or Color3.fromRGB(60, 60, 65),
                Parent = ToggleFrame
            }, {
                Create("UICorner", { CornerRadius = UDim.new(1, 0) })
            })

            local Circle = Create("Frame", {
                Size = UDim2.new(0, 14, 0, 14),
                Position = Toggled and UDim2.new(1, -17, 0.5, -7) or UDim2.new(0, 3, 0.5, -7),
                BackgroundColor3 = Color3.fromRGB(255, 255, 255),
                Parent = Status
            }, {
                Create("UICorner", { CornerRadius = UDim.new(1, 0) })
            })

            ToggleFrame.MouseButton1Click:Connect(function()
                Toggled = not Toggled
                local Goal = Toggled and UDim2.new(1, -17, 0.5, -7) or UDim2.new(0, 3, 0.5, -7)
                TweenService:Create(Circle, TweenInfo.new(0.2), {Position = Goal}):Play()
                TweenService:Create(Status, TweenInfo.new(0.2), {BackgroundColor3 = Toggled and Seraph.Themes.Dark.Accent or Color3.fromRGB(60, 60, 65)}):Play()
                pcall(Callback, Toggled)
            end)
        end

        function Tab:AddSlider(SldTitle, Min, Max, Default, Callback)
            local SliderValue = Default or Min
            local SliderFrame = Create("Frame", {
                Size = UDim2.new(0, 360, 0, 55),
                BackgroundColor3 = Seraph.Themes.Dark.Element,
                Parent = TabPage
            }, {
                Create("UICorner", { CornerRadius = UDim.new(0, 6) }),
                Create("TextLabel", {
                    Text = SldTitle,
                    Size = UDim2.new(1, 0, 0, 30),
                    Position = UDim2.new(0, 10, 0, 0),
                    TextColor3 = Seraph.Themes.Dark.Text,
                    BackgroundTransparency = 1,
                    Font = Enum.Font.Gotham,
                    TextSize = 14,
                    TextXAlignment = "Left"
                })
            })

            local SliderBar = Create("Frame", {
                Size = UDim2.new(0, 340, 0, 6),
                Position = UDim2.new(0, 10, 0, 40),
                BackgroundColor3 = Color3.fromRGB(50, 50, 55),
                Parent = SliderFrame
            }, { Create("UICorner", { CornerRadius = UDim.new(1, 0) }) })

            local Fill = Create("Frame", {
                Size = UDim2.new((SliderValue - Min) / (Max - Min), 0, 1, 0),
                BackgroundColor3 = Seraph.Themes.Dark.Accent,
                Parent = SliderBar
            }, { Create("UICorner", { CornerRadius = UDim.new(1, 0) }) })

            local ValueLabel = Create("TextLabel", {
                Text = tostring(SliderValue),
                Size = UDim2.new(0, 40, 0, 30),
                Position = UDim2.new(1, -50, 0, 0),
                TextColor3 = Seraph.Themes.Dark.Accent,
                BackgroundTransparency = 1,
                Font = Enum.Font.GothamBold,
                TextSize = 13
            })
            ValueLabel.Parent = SliderFrame

            local function UpdateSlider()
                local MousePos = UserInputService:GetMouseLocation().X
                local BarPos = SliderBar.AbsolutePosition.X
                local BarWidth = SliderBar.AbsoluteSize.X
                local Percentage = math.clamp((MousePos - BarPos) / BarWidth, 0, 1)
                SliderValue = math.floor(Min + (Max - Min) * Percentage)
                
                ValueLabel.Text = tostring(SliderValue)
                Fill.Size = UDim2.new(Percentage, 0, 1, 0)
                pcall(Callback, SliderValue)
            end

            SliderBar.InputBegan:Connect(function(input)
                if input.UserInputType == Enum.UserInputType.MouseButton1 then
                    local dragging = true
                    UpdateSlider()
                    local MoveCon
                    MoveCon = UserInputService.InputChanged:Connect(function(move)
                        if move.UserInputType == Enum.UserInputType.MouseMovement and dragging then
                            UpdateSlider()
                        end
                    end)
                    UserInputService.InputEnded:Connect(function(endinput)
                        if endinput.UserInputType == Enum.UserInputType.MouseButton1 then
                            dragging = false
                            MoveCon:Disconnect()
                        end
                    end)
                end
            end)
        end
        
        return Tab
    end

    return Window
end

return Seraph
